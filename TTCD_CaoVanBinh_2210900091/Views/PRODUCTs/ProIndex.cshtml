@model IEnumerable<TTCD_CaoVanBinh_2210900091.Models.PRODUCT>

@{
    ViewBag.Title = "Danh sách sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center my-4 font-weight-bold text-primary">Danh sách sản phẩm</h2>

<p class="text-center mb-5">
    @Html.ActionLink("Thêm sản phẩm mới", "Create", null, new { @class = "btn btn-success btn-lg shadow-sm" })
</p>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6 col-sm-12">
                <div class="card mb-4 shadow-sm h-100" style="border-radius: 10px; overflow: hidden;">
                    <img src="@item.product_image" class="card-img-top" alt="@item.product_name" style="width: 100%; height: 250px; object-fit: cover; border-top-left-radius: 10px; border-top-right-radius: 10px;" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-center font-weight-bold text-dark">@item.product_name</h5>
                        <p class="card-text text-muted" style="font-size: 0.95rem;">
                            <strong>Giá:</strong> <span class="text-success">@item.product_price.ToString("C0") VND</span> <br />
                            <strong>Kích thước:</strong> @item.product_size <br />
                            <strong>Màu sắc:</strong> @item.product_color <br />
                            <strong>Số lượng:</strong> @item.product_quantity <br />
                            <strong>Mô tả:</strong> @item.description
                        </p>
                        <div class="mt-auto d-flex justify-content-around">
                            @Html.ActionLink("Xem Thêm", "Details", new { id = item.product_id }, new { @class = "btn btn-outline-primary btn-sm rounded-pill px-3" })
                            @Html.ActionLink("Thêm vào giỏ hàng", "AddToCart", "Cart", new { id = item.product_id }, new { @class = "btn btn-outline-warning btn-sm rounded-pill px-3" })
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
