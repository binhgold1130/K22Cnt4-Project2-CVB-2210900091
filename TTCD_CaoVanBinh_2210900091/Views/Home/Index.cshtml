    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f9f9f9; /* Màu nền tổng thể nhạt hơn */
        }

        .hero__item {
            background-color: #f0f4f7; /* Nền màu xanh nhạt tinh tế */
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            text-align: center;
            border: 2px solid #82b1ff; /* Viền xanh nhạt */
            margin-bottom: 30px;
        }

            .hero__item h1 {
                color: #01579b; /* Màu xanh đậm hơn */
                font-weight: bold;
                font-size: 2.5rem;
            }

            .hero__item p {
                color: #013a63; /* Màu chữ xám đậm */
                font-size: 1.2rem;
                margin-bottom: 20px;
            }

        .btn-custom {
            margin: 10px 5px;
            background-color: #039be5; /* Màu xanh dương cho nút */
            color: #fff;
            border: none;
        }

            .btn-custom:hover {
                background-color: #0288d1; /* Màu xanh dương đậm khi hover */
            }

        .featured-products-title {
            background-color: #ffeb3b; /* Vẫn giữ màu vàng nhưng có thể tinh chỉnh */
            color: #212121; /* Màu chữ tối */
            padding: 10px;
            text-align: center;
            border-radius: 5px;
            margin-bottom: 30px;
            font-size: 1.5rem;
        }

        .price-link {
            color: #0277bd; /* Màu xanh đậm hơn cho giá */
            text-decoration: none;
            font-weight: bold;
        }

        .card {
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); /* Bóng mờ nhẹ */
        }

            .card img {
                cursor: pointer;
                transition: transform 0.2s;
            }

                .card img:hover {
                    transform: scale(1.05);
                }

        .footer__widget input[type="email"] {
            width: calc(100% - 80px);
            display: inline-block;
            margin-right: 10px;
            border: 1px solid #82b1ff; /* Viền màu xanh nhạt */
            border-radius: 5px;
        }

        .footer__widget .footer__widget__social a {
            margin-right: 10px;
            color: #01579b; /* Màu xanh đậm cho icon mạng xã hội */
        }
        @**@media (max-width: 768px) {
            .hero__item h1 {
                font-size: 2rem;
            }

            .hero__item p {
                font-size: 1rem;
            }

            .featured-products-title {
                font-size: 1.2rem;
            }
        }
    </style>
