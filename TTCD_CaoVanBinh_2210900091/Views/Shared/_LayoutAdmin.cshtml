<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Admin Panel</title>


    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .sidebar {
            height: 100vh;
            background-color: #343a40;
            color: white;
            padding-top: 20px;
        }

            .sidebar a {
                color: white;
                text-decoration: none;
                display: block;
                padding: 10px 15px;
                border-bottom: 1px solid #495057;
            }

                .sidebar a:hover {
                    background-color: #495057;
                }

        .content {
            padding: 20px;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-2 d-none d-md-block sidebar">
                <h3 class="text-center">Bảng Điều Khiển Quản Trị</h3>
                <a href="@Url.Action("Index", "QUAN_TRI1")">Trang Chủ</a>
                <a href="@Url.Action("TrangSanPham", "Admin")">Quản Lý Sản Phẩm</a>
                <a href="@Url.Action("DonHang", "Admin")">Quản Lý Đơn Hàng</a>
                <a href="@Url.Action("NguoiDung", "Admin")">Quản Lý Người Dùng</a>
                <a href="@Url.Action("DanhMuc", "Admin")">Quản Lý Danh Mục</a>
                <a href="@Url.Action("ThongKe", "Admin")">Thống Kê</a>
                <a href="@Url.Action("HoTroKhachHang", "Admin")">Hỗ Trợ Khách Hàng</a>
                <a href="@Url.Action("CaiDat", "Admin")">Cài Đặt</a>
                <a href="@Url.Action("Logout", "Account")" class="text-danger">Đăng Xuất</a>
            </nav>



            <!-- Main Content -->
            <main role="main" class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="content">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
